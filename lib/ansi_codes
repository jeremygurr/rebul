COL150=$'\n\e[A\e[150G'
COL160=$'\n\e[A\e[160G'
COL170=$'\n\e[A\e[170G'
COL180=$'\n\e[A\e[180G'
COL190=$'\n\e[A\e[190G'
COL200=$'\n\e[A\e[200G'

